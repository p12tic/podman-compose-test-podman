+	if err != nil {
+		t.Skipf("Failed to list installed providers: %v", err)
+	}
 	switch runtime.GOOS {
 	case "darwin":
 		// TODO: need to verify if an arm64 machine reports {applehv, libkrun}
@@ -72,7 +74,9 @@ func TestBadSupportedProviders(t *testing.T) {
 
